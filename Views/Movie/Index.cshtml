@model IEnumerable<MoviesApp.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h2 class="mb-3">Movies</h2>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-success" asp-action="Create">Add New Movie</a>
</div>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>Title</th>
            <th>Release Year</th>
            <th>Genre</th>
            <th>Poster</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var movie in Model)
        {
            <tr class="text-center">
                <td class="text-start">@movie.Title</td>
                <td>@movie.ReleaseYear</td>
                <td>@movie.Genre</td>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.Id">
                        <img src="~/image/@movie.ImgUrl" alt="@movie.Title" width="70" height="90" />
                    </a>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@movie.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@movie.Id">Delete</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>