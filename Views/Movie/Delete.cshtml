@model MoviesApp.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-danger mb-3">Delete Confirmation</h2>

<div class="card w-50 mx-auto text-center">
    <img src="~/image/@Model.ImgUrl" class="card-img-top" alt="@Model.Title" />

    <div class="card-body">
        <h4>@Model.Title</h4>
        <p class="text-danger fw-bold">Are you sure you want to delete this movie?</p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>